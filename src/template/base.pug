mixin linebreak(number)
    | #{"\n".repeat(number)}

mixin fullSnippet(selector, inputs, hasChildren)
    | <#{selector.negative ? ':not(': ''}
    if selector.element
        | #{selector.element}
    else
        | div
    if selector.attribute
        |
        |   #{selector.attribute}
        if selector.value
            | ='!{selector.value}'
    if selector.cls && selector.cls.length > 0
        |
        |   class='
        each cls, index in selector.cls
            | #{cls}#{(index < selector.cls.length - 1) ? ' ' : ''}
        | '
    | #{selector.negative ? ')': ''}
    +inputs(inputs)
    | >
    if hasChildren
        |
        |     {content}
    |
    | </#{(selector.element) ? selector.element : 'div'}>

mixin summarySnippet(inputs, hasChildren)
    | <(selectors)
    +inputs(inputs)
    | >
    if hasChildren
        |
        |     {content}
    |
    | </(selectors)>

mixin inputs(inputs)
    if inputs && inputs.length > 0
        each input, index in inputs
            |
            |   #{input.name}
            if input.type
                | ='{!{input.type}}'

mixin list(name, items)
    - var arr = Array.isArray(items) ? items : items ? [items] : [];
    if arr.length > 0
        |
        | #### #{name}
        for item in arr
            |
            | - #{item}
    +linebreak(1)

block content